<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    @System.Web.Optimization.Styles.Render("~/Content/themes/base/css")
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
</head>
<body>
    <header>
        <div style="overflow: hidden;">
            <a id="koszykHeaderLink" href="link">
                Koszyk (<span id="koszyk-naglowek-ilosc-elementow">@Html.Action("PobierzIloscElementowKoszyka", "Koszyk")</span>)
                <span></span>
            </a>

            @Html.Partial("_LoginPartial")

            <a id="indexHeaderLogo" href="@Url.Content("~/")">
                <img src="@Url.Content("~/Content/Images/logo.png")" class="center" />
            </a>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <nav>
            <ul>
                <li>@Html.ActionLink("O nas", "StronyStatyczne", "Home", new { nazwa = "Onas" }, null)</li>
                <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Spolecznosc" })">Społeczność</a></li>
                <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Opinie" })">Opinie</a></li>
                <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Pomoc" })">Pomoc</a></li>
                <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Regulamin" })">Regulamin</a></li>
                <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Kontakt" })">Kontakt</a></li>
            </ul>
        </nav>
        <div id="footerLogo">
        </div>
        <div id="footerCopyright">
            Copyright &copy; Kajetan Pawliszyn 2019
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
